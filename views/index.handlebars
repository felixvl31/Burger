<div class="container mt-5 rounded text-center">
  <h1 class="">Burgers!</h1>


  <div class="row">

    <div class="col-12 col-m-6 notdevoured">
      <h2 class="text-center">Burgers that are not devoured!</h2>
      <div class="row">
        <div class="col-9">
          <ul class="text-nowrap text-truncate text-left">
            {{#each burgers}}
              {{#unless devoured}}
              <li>{{name}}</li> 
              {{/unless}}
            {{/each}}
          </ul>
        </div>

        <div class="col-3">
          <ul class="text-left">
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-12 col-m-6 devoured">
      <h2 class="text-center" >Burgers that are devoured!</h2>
      <div class="row">
        <div class="col-9">
          <ul class="text-nowrap text-truncate text-left">
            {{#each burgers}}
              {{#if devoured}}
              <li>{{name}}</li> 
              {{/if}}
            {{/each}}
          </ul>
        </div>

        <div class="col-3">
          <ul class="text-left">
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

</div>

    <h2>Order a burger</h2>
    <img src="/assets/images/burger.gif" alt="Smiley face" height="150" >
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>

      <button type="submit">Add burger</button>
    </form>

</div>